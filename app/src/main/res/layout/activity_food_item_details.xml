<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8BC34A"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".app.FoodItemDetailsActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/mainlogoa"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_below="@+id/logo"
        android:background="@drawable/row_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsFoodName"
            android:text="ABC"
            android:textSize="19sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories:"
            android:id="@+id/detsCaloriesTitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsCalorieValue"
            android:text="100"
            android:textSize="18sp"
            android:layout_marginTop="18dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detsDateText"
            android:text="Consumed on..."
            android:textSize="16sp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/detsShareButton"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="right"
            android:layout_marginTop="45dp"
            android:background="@drawable/circletwo"
            android:text="@string/share_title"/>


    </LinearLayout>



</RelativeLayout>